<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.Game_up"
    android:id="@+id/game_up"
    android:background="@color/colorPrimary">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/enigmePicture"
            android:layout_height="250dp"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:padding="1dp"
            android:background="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enigmeTv"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indicationTv"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center" />

        <Button
            android:text="@string/nextEnigme"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_green_dark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextenigme"
            android:onClick="enigmeSuivante"
            android:visibility="invisible"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</FrameLayout>
