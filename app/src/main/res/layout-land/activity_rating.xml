<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/colorPrimary">

    <TableRow
        android:layout_width="match_parent"
        android:id="@+id/messageTr"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/ratingTxt"
            android:layout_width="wrap_content"
            android:id="@+id/messageRatingTv"
            android:layout_margin="25sp"
            android:textSize="16sp"
            android:gravity="center"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rateTr"
        android:gravity="center"
        android:layout_marginTop="25sp">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            style="@android:style/Widget.RatingBar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/validTr"
        android:gravity="center"
        android:layout_marginTop="40sp">

        <Button
            android:text="@string/ratingBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RatingValidButton"
            android:textSize="18sp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:padding="25dp"
            android:background="@color/colorButton"/>
    </TableRow>
</TableLayout>